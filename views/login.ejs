<div class="success">
    <% if(flash.success) { %>
        <p>
            <%= flash.success %>
        </p>
    <% } %>
</div>

<div class="error">
    <% if(flash.error) { %>
        <p>
            <%= flash.error %>
        </p>
    <% } %>
</div>

<form action="/loginData" method="post">
    <table>
        <tr>
            <td>
                Email :- 
            </td>
            <td>
                <input type="email" name="email">
            </td>
        </tr>
        <tr>
            <td>
                Password :- 
            </td>
            <td>
                <input type="password" name="password">
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Login">
            </td>
        </tr>
    </table>
</form>

